<div class="panel panel-default col-lg-6 col-md-offset-1 smart-panel">
    <!-- Default panel contents -->

    <div class="panel-heading ">
        <h1>
            New module
        </h1>
    </div>
    <div class="center-form-big">
        <form role="form" method="post" action="/modules" style="max-width: 300px;">
            <div class="form-group">
                <input type="text" name="name" id="name" placeholder="Module name" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="text" name="port" id="port" placeholder="Module port" class="form-control"/>
            </div>
            <div class="form-group">
                <select name="name" id="type" placeholder="Module type" class="form-control">
                    <option value="0">Swiat≈Ço</option>
                    <option value="1">Rolety</option>
                    <option value="2">Meteo</option>
                </select>
            </div>
            <div class="form-group">
                <select name="name" id="name" placeholder="Module room" class="form-control">
                    #foreach($room in $rooms)
                        <option value="$room.id">$room.name</option>
                    #end
                </select>
            </div>
            <button type="submit" class="btn btn-default save-button" aria-label="Left Align">
                <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
            </button>
            &nbsp;
        </form>
    </div>

</div>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Smart Dom</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="/main.css" rel="stylesheet" type="text/css">
</head>
<body>

    #parse("/public/navbar.vm")

<div class="main-container">

    #if($errors)
        #foreach($error in $errors)
            <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span>$error</span>
            </div>
        #end
    #end

    <div class="center-form">
        <form role="form" method="post" action="/signIn" style="max-width: 300px;">
            <div class="form-group">
                <input type="text" name="username" id="username" placeholder="Wpisz login" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="password" name="password" id="password" placeholder="HasÅ‚o" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-default">Zaloguj</button>
            &nbsp;

        </form>
        <h3>Nie masz konta? <a href="/register">Zarejestruj</a></h3>
    </div>

</div>

</body>
</html>